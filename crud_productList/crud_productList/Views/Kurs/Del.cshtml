@model Course

@{
    ViewData["Title"] = "Del";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container text-center p-5 my-5">
    <h3 class="badge text-white bg-success"> @Model.CourseName </h3>
    <h2> İsimli Kurs silinecek. Kabul ediyor musun? </h2>



    <div class="container-fluid">
        <form method="post">
            <button type="submit" class="btn btn-danger">Evet</button>
            <a href="/Kurs/Index" class="btn btn-secondary">Hayır</a>
        </form>

    </div>

</div>




